@model Person
@{
  var fn = Model.FirstName;
  ViewData["Title"] = fn;
}

<h2>Are you sure to delete the following? </h2>

<ul class="list-group">
  <li class="list-group-item">Id = @Model.Id</li>
  <li class="list-group-item">First Name = @fn</li>
  <li class="list-group-item">Last Name = @Model.Surname</li>
  <li class="list-group-item">Address = @Model.Address</li>
  <li class="list-group-item">Gender = @Model.Gender</li>
  <li class="list-group-item">Salary = @Model.Salary</li>
</ul>

<form asp-controller="Employee" asp-action="Delete" method="POST">
  <input type="hidden" asp-for="Id">

  <button type="submit" class="btn btn-danger">DELETE</button>
</form>