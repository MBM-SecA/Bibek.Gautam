@model Person

@{
    ViewData["Title"] = "Add Employee";
}

<h1>Add New Employee</h1>
<hr>

<form asp-controller = "Employee" asp-action = "Add" method="POST">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <span asp-validation-for = "FirstName" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name">
    </div>

    <div class="form-group">
        <label asp-for="Surname"></label>
        <span asp-validation-for = "Surname" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="Surname" placeholder="Enter Last Name">
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <textarea class="form-control" asp-for="Address" placeholder="Enter Address "></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <input type="text" class="form-control" asp-for="Gender" placeholder="Enter Gender">
    </div>

    <div class="form-group">
        <label asp-for="Salary"></label>
        <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
  </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>